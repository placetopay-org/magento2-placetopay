<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">We received your order!</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Banchile\Payments\Block\Frontend\Onepage\Failure" name="banchile.checkout.failure" template="Banchile_Payments::onepage/failure.phtml" />
        </referenceContainer>
    </body>
</page>
