<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="banchile" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Banchile pagos</label>
                <comment>Accept payments by credit cards and debits account using Banchile pagos.</comment>
                <fieldset_css>complex banchile-admin-config</fieldset_css>
                <frontend_model>Banchile\Payments\Block\Adminhtml\System\Config\Fieldset</frontend_model>
                <attribute type="displayIn">recommended_solutions</attribute>
                <include path="Banchile_Payments::system/company.xml"/>
                <include path="Banchile_Payments::system/settings.xml"/>
                <include path="Banchile_Payments::system/gateway.xml"/>
                <include path="Banchile_Payments::system/information.xml" />
            </group>
        </section>
    </system>
</config>
