<?xml version="1.0"?>
<include
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd"
>
    <group
        id="gateway"
        translate="label comment"
        type="text"
        sortOrder="1"
        showInDefault="1"
        showInWebsite="1"
        showInStore="1"
    >
        <label>Connection Settings</label>

        <comment>
            <![CDATA[You will need to set your API keys before you can accept payments. If you do not yet have a account, please <a href="https://www.placetopay.com/web/contactanos" target="_blank">click here</a> to contact and register.]]>
        </comment>

        <field
            id="active"
            translate="label"
            type="select"
            sortOrder="10"
            showInDefault="1"
            showInWebsite="1"
            showInStore="1"
        >
            <label>Enabled</label>

            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>

            <config_path>payment/banchile/active</config_path>
        </field>

        <field
            id="banchile_mode"
            translate="label"
            type="select"
            sortOrder="50"
            showInDefault="1"
            showInWebsite="1"
            showInStore="1"
        >
            <label>Mode</label>

            <comment><![CDATA[Set this to production when you are ready to accept payments.]]></comment>

            <source_model>Banchile\Payments\Model\Adminhtml\Source\Mode</source_model>

            <config_path>payment/banchile/banchile_mode</config_path>
        </field>

        <field
            id="banchile_development_lg"
            translate="label comment"
            type="text"
            sortOrder="70"
            showInDefault="1"
            showInWebsite="1"
            showInStore="1"
        >
            <label>Development Login</label>

            <comment>
                <![CDATA[<a target="_blank" href="portalweb.banchilepagos.cl">Your Account</a> > Sites > Development Login]]>
            </comment>

            <depends>
                <field id="banchile_mode">development</field>
            </depends>

            <config_path>payment/banchile/banchile_development_lg</config_path>
        </field>

        <field
            id="banchile_development_tk"
            translate="label comment"
            type="obscure"
            sortOrder="80"
            showInDefault="1"
            showInWebsite="1"
            showInStore="1"
        >
            <label>Development TranKey</label>

            <comment>
                <![CDATA[<a target="_blank" href="https://portalweb.banchilepagos.cl">Your Account</a> > Sites > Development TranKey]]>
            </comment>

            <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>

            <depends>
                <field id="banchile_mode">development</field>
            </depends>

            <config_path>payment/banchile/banchile_development_tk</config_path>
        </field>

        <field
            id="banchile_test_lg"
            translate="label comment"
            type="text"
            sortOrder="90"
            showInDefault="1"
            showInWebsite="1"
            showInStore="1"
        >
            <label>Test Login</label>

            <comment>
                <![CDATA[<a target="_blank" href="https://portalweb.banchilepagos.cl">Your Account</a> > Sites > Test Login]]>
            </comment>

            <depends>
                <field id="banchile_mode">test</field>
            </depends>

            <config_path>payment/banchile/banchile_test_lg</config_path>
        </field>

        <field
            id="banchile_test_tk"
            translate="label comment"
            type="obscure"
            sortOrder="100"
            showInDefault="1"
            showInWebsite="1"
            showInStore="1"
        >
            <label>Test TranKey</label>

            <comment>
                <![CDATA[<a target="_blank" href="https://portalweb.banchilepagos.cl">Your Account</a> > Sites > Test TranKey]]>
            </comment>

            <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>

            <depends>
                <field id="banchile_mode">test</field>
            </depends>

            <config_path>payment/banchile/banchile_test_tk</config_path>
        </field>

        <field
            id="banchile_production_lg"
            translate="label comment"
            type="text"
            sortOrder="110"
            showInDefault="1"
            showInWebsite="1"
            showInStore="1"
        >
            <label>Production Login</label>

            <comment>
                <![CDATA[<a target="_blank" href="https://portalweb.banchilepagos.cl">Your Account</a> > Sites > Production Login]]>
            </comment>

            <depends>
                <field id="banchile_mode">production</field>
            </depends>

            <config_path>payment/banchile/banchile_production_lg</config_path>
        </field>

        <field
            id="banchile_production_tk"
            translate="label comment"
            type="obscure"
            sortOrder="120"
            showInDefault="1"
            showInWebsite="1"
            showInStore="1"
        >
            <label>Production TranKey</label>

            <comment>
                <![CDATA[<a target="_blank" href="https://portalweb.banchilepagos.cl">Your Account</a> > Sites > Production TranKey]]>
            </comment>

            <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>

            <depends>
                <field id="banchile_mode">production</field>
            </depends>

            <config_path>payment/banchile/banchile_production_tk</config_path>
        </field>

        <field
            id="banchile_custom_lg"
            translate="label comment"
            type="text"
            sortOrder="130"
            showInDefault="1"
            showInWebsite="1"
            showInStore="1"
        >
            <label>Custom Login</label>

            <comment>
                <![CDATA[<a target="_blank" href="https://portalweb.banchilepagos.cl">Your Account</a> > Sites > Custom Login]]>
            </comment>

            <depends>
                <field id="banchile_mode">custom</field>
            </depends>

            <config_path>payment/banchile/banchile_custom_lg</config_path>
        </field>

        <field
            id="banchile_custom_tk"
            translate="label comment"
            type="obscure"
            sortOrder="140"
            showInDefault="1"
            showInWebsite="1"
            showInStore="1"
        >
            <label>Custom TranKey</label>

            <comment>
                <![CDATA[<a target="_blank" href="https://portalweb.banchilepagos.cl">Your Account</a> > Sites > Custom TranKey]]>
            </comment>

            <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>

            <depends>
                <field id="banchile_mode">custom</field>
            </depends>

            <config_path>payment/banchile/banchile_custom_tk</config_path>
        </field>

        <field
            id="payment_button_image"
            translate="label comment"
            type="text"
            sortOrder="150"
            showInDefault="1"
            showInWebsite="1"
            showInStore="1"
        >
            <label>Payment Button Image</label>

            <comment><![CDATA[It can be a URL, an image name (provide the image to the Banchile Pagos team as svg format for this to work) or a local path (save the image to the pub/media folder).]]></comment>

            <config_path>payment/banchile/payment_button_image</config_path>
        </field>

        <field
            id="sort_order"
            translate="label"
            type="text"
            sortOrder="160"
            showInDefault="1"
            showInWebsite="1"
            showInStore="1"
        >
            <label>Sort Order</label>

            <comment><![CDATA[Adjust this to move the payment method above or below other payment methods.]]></comment>

            <frontend_class>validate-number</frontend_class>

            <config_path>payment/banchile/sort_order</config_path>
        </field>
    </group>
</include>
