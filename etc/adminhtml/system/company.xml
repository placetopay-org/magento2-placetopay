<?xml version="1.0"?>
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="company" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>Merchant Parameters</label>
        <field id="merchant_id" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>Merchant ID</label>
            <frontend_class>validate-number</frontend_class>
            <config_path>payment/placetopay/merchant_id</config_path>
        </field>
        <field id="legal_name" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>Legal Name</label>
            <config_path>payment/placetopay/legal_name</config_path>
        </field>
        <field id="email" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>Email contact</label>
            <frontend_class>validate-email</frontend_class>
            <config_path>payment/placetopay/email</config_path>
        </field>
        <field id="phone" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1"
               showInStore="1">
            <label>Telephone contact</label>
            <frontend_class>validate-phoneStrict</frontend_class>
            <config_path>payment/placetopay/phone</config_path>
        </field>
    </group>
</include>
